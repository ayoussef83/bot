# Backend Dockerfile (Development)
FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY backend/package*.json ./
RUN npm install

# Copy Prisma
COPY backend/prisma ./prisma
RUN npx prisma generate

# Copy source code
COPY backend ./

# Expose port
EXPOSE 3000

# Start in development mode
CMD ["npm", "run", "start:dev"]












